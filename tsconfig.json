{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["es2020"],
        "rootDir": "./src",
        "target": "ES2018", 
        "strict": false,
    },
    "exclude": ["node_modules"],
    "include": ["src/types/*.d.ts", "src/**/*.ts", "src/**/*.js"]
}
