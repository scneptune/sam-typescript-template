{
	"name": "instructor-portal-backend",
	"description": "An AWS SAM project that is the backend to the Level Up Instructor's portal",
	"version": "0.0.1",
	"private": true,
	"dependencies": {
		"@aws-crypto/sha256-js": "^4.0.0",
		"@aws-sdk/client-dynamodb": "^3.338.0",
		"@aws-sdk/client-secrets-manager": "^3.354.0",
		"@aws-sdk/client-ses": "^3.462.0",
		"@aws-sdk/credential-provider-node": "^3.350.0",
		"@aws-sdk/lib-dynamodb": "^3.188.0",
		"@aws-sdk/node-http-handler": "^3.350.0",
		"@aws-sdk/protocol-http": "^3.347.0",
		"@aws-sdk/signature-v4": "^3.347.0",
		"@aws-sdk/util-arn-parser": "^3.310.0",
		"@middy/core": "^4.5.1",
		"@middy/error-logger": "^4.5.2",
		"@middy/http-cors": "^4.5.2",
		"@middy/http-error-handler": "^4.5.1",
		"@middy/http-event-normalizer": "^4.5.2",
		"@middy/secrets-manager": "^4.5.2",
		"@okta/jwt-verifier": "^3.0.1",
		"@types/node": "^20.2.5",
		"aws-lambda": "^1.0.7",
		"axios": "^1.4.0",
		"cheerio": "^1.0.0-rc.12",
		"http-errors": "^2.0.0",
		"lodash": "^4.17.21",
		"lodash.kebabcase": "^4.1.1",
		"node-fetch-native": "^1.1.1",
		"node-html-parser": "^6.1.11",
		"nodemailer": "^6.9.7",
		"source-map-support": "^0.5.21",
		"typescript": "^5.0.4",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@html-eslint/eslint-plugin": "^0.22.0",
		"@html-eslint/parser": "^0.22.0",
		"@types/aws-lambda": "^8.10.115",
		"@types/aws4": "^1.11.2",
		"@types/jest": "^29.5.1",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"ajv": "^8.12.0",
		"aws-sdk-client-mock": "^2.0.0",
		"chokidar": "^3.5.3",
		"esbuild": "^0.17.19",
		"eslint": "^8.41.0",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"socket.io": "^4.7.2",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1"
	},
	"scripts": {
		"test": "jest",
		"lint-format": "npm run lint && npm run prettier-format",
		"prettier-format": "prettier --config .prettierrc --write src/**/*.ts",
		"watch": "npm run lint-format && node scripts/lambdaBuildLivereload.js",
		"lint": "eslint --quiet --fix src/**/*.ts",
		"start": "npm run setup-local-aws-creds && npm run sam-build && npm run run-local",
		"setup-local-aws-creds": "aws configure sso --region us-west-2 --output json --profile default",
		"sam-build": "sam validate && sam build --parallel",
		"run-local": "sam local start-api --profile default --log-file samlocal.log",
		"deploy": "sam build && sam package --output-template-file packaged.yaml && sam deploy --template-file packaged.yaml --region us-west-2 --capabilities CAPABILITY_IAM"
	},
	"lint-staged": {
		"*.{js,jsx,json,ts,tsx}": [
			"eslint --quiet --fix",
			"prettier --config .prettierrc --write"
		]
	}
}
